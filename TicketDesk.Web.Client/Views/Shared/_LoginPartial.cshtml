@using TicketDesk.Web.Identity


<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-user"></i>
        @(User.Identity.IsAuthenticated ? User.Identity.GetUserDisplayName() : "Account")
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
        @if (Request.IsAuthenticated)
        {
            <li>
                @Html.ActionLink("My Account", "Index", "Manage", new { area = "" }, new { title = "Manage" })
            </li>
            <li>
                @Html.ActionLink("Log Off", "LogOff", "Account", new { area = "" }, new { title = "LogOff" })
            </li>
        }
        else
        {

            <li>@Html.ActionLink("Register", "Register", "Account", new {area = ""}, new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Log In", "Login", "Account", new {area = ""}, new { id = "loginLink" })</li>
        }
    </ul>

</li>

